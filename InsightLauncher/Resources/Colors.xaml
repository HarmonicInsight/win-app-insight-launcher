<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <Color x:Key="PrimaryColor">#3B82F6</Color>
    <Color x:Key="PrimaryLightColor">#60A5FA</Color>
    <Color x:Key="PrimaryDarkColor">#1D4ED8</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundDarkColor">#0F172A</Color>
    <Color x:Key="BackgroundColor">#1E293B</Color>
    <Color x:Key="BackgroundLightColor">#334155</Color>
    <Color x:Key="CardBackgroundColor">#1E293B</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#F8FAFC</Color>
    <Color x:Key="TextSecondaryColor">#94A3B8</Color>
    <Color x:Key="TextMutedColor">#64748B</Color>

    <!-- Accent Colors -->
    <Color x:Key="SuccessColor">#22C55E</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="ErrorColor">#EF4444</Color>
    <Color x:Key="InfoColor">#3B82F6</Color>

    <!-- File Type Colors -->
    <Color x:Key="ExcelColor">#22C55E</Color>
    <Color x:Key="WordColor">#3B82F6</Color>
    <Color x:Key="PowerPointColor">#F97316</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#334155</Color>
    <Color x:Key="BorderLightColor">#475569</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>

    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDarkColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLightColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <SolidColorBrush x:Key="ExcelBrush" Color="{StaticResource ExcelColor}"/>
    <SolidColorBrush x:Key="WordBrush" Color="{StaticResource WordColor}"/>
    <SolidColorBrush x:Key="PowerPointBrush" Color="{StaticResource PowerPointColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>

    <!-- Gradients -->
    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0F172A" Offset="0"/>
        <GradientStop Color="#1E293B" Offset="0.5"/>
        <GradientStop Color="#0F172A" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
