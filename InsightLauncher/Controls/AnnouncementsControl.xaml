<UserControl x:Class="InsightLauncher.Controls.AnnouncementsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InsightLauncher.ViewModels"
             xmlns:models="clr-namespace:InsightLauncher.Models">

    <Border Style="{StaticResource CardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ãƒ˜ãƒƒãƒ€ãƒ¼ -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ””" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Text="ãŠçŸ¥ã‚‰ã›"
                               Style="{StaticResource SectionHeader}"
                               Margin="8,0,0,0"/>
                    <TextBlock Text="é›†ä¸­ç®¡ç†"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource IconButton}"
                        Command="{Binding RefreshCommand}">
                    <TextBlock Text="ðŸ”„" FontSize="12"/>
                </Button>
            </Grid>

            <!-- ãŠçŸ¥ã‚‰ã›ãƒªã‚¹ãƒˆ -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Announcements}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Announcement}">
                            <Border Background="#374151"
                                    CornerRadius="8"
                                    Padding="12"
                                    Margin="0,0,0,8"
                                    BorderThickness="4,0,0,0"
                                    BorderBrush="{Binding Type, Converter={StaticResource AnnouncementTypeToColorConverter}}"
                                    Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- ã‚¢ã‚¤ã‚³ãƒ³ -->
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Type, Converter={StaticResource AnnouncementTypeToIconConverter}}"
                                               FontSize="18"
                                               VerticalAlignment="Top"
                                               Margin="0,2,12,0"/>

                                    <!-- å†…å®¹ -->
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontWeight="Medium"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Border Style="{StaticResource NewBadge}"
                                                    Margin="8,0,0,0"
                                                    Visibility="{Binding IsNew, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="NEW"
                                                           Foreground="White"
                                                           FontSize="9"
                                                           FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Content}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxHeight="36"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="{Binding Date, StringFormat=yyyy/MM/dd}"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   FontSize="11"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>

                                    <!-- çŸ¢å° -->
                                    <TextBlock Grid.Column="2"
                                               Text="â€º"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="18"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
