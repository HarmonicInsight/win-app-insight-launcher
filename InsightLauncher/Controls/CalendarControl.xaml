<UserControl x:Class="InsightLauncher.Controls.CalendarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:InsightLauncher.ViewModels"
             xmlns:models="clr-namespace:InsightLauncher.Models">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ãƒ˜ãƒƒãƒ€ãƒ¼ -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“…" FontSize="18" VerticalAlignment="Center"/>
                <TextBlock Text="ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼"
                           Style="{StaticResource SectionHeader}"
                           Margin="8,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource GhostButton}"
                        Command="{Binding GoToTodayCommand}"
                        Padding="8,4"
                        Margin="0,0,8,0">
                    <TextBlock Text="ä»Šæ—¥" FontSize="12" Foreground="{StaticResource PrimaryBrush}"/>
                </Button>
                <Button Style="{StaticResource IconButton}"
                        Command="{Binding RefreshCommand}">
                    <TextBlock Text="ðŸ”„" FontSize="12"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- é€£æºçŠ¶æ…‹ -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Border Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="8,4"
                    Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8"
                             Fill="{Binding IsOutlookConnected, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Outlook}"/>
                    <TextBlock Text="Outlook"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               Margin="6,0,0,0"/>
                </StackPanel>
            </Border>
            <Border Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8"
                             Fill="{Binding IsGoogleConnected, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Google}"/>
                    <TextBlock Text="Google"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               Margin="6,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- æœˆã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼ -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundSecondaryBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- æœˆãƒŠãƒ“ã‚²ãƒ¼ã‚·ãƒ§ãƒ³ -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Style="{StaticResource IconButton}"
                            Command="{Binding PreviousMonthCommand}">
                        <TextBlock Text="â—€" FontSize="10"/>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="{Binding DisplayMonthString}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontWeight="SemiBold"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="2"
                            Style="{StaticResource IconButton}"
                            Command="{Binding NextMonthCommand}">
                        <TextBlock Text="â–¶" FontSize="10"/>
                    </Button>
                </Grid>

                <!-- æ›œæ—¥ãƒ˜ãƒƒãƒ€ãƒ¼ -->
                <UniformGrid Grid.Row="1" Columns="7" Margin="0,0,0,4">
                    <TextBlock Text="æ—¥" Foreground="{StaticResource ErrorBrush}" FontSize="11" HorizontalAlignment="Center" FontWeight="Medium"/>
                    <TextBlock Text="æœˆ" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" HorizontalAlignment="Center" FontWeight="Medium"/>
                    <TextBlock Text="ç«" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" HorizontalAlignment="Center" FontWeight="Medium"/>
                    <TextBlock Text="æ°´" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" HorizontalAlignment="Center" FontWeight="Medium"/>
                    <TextBlock Text="æœ¨" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" HorizontalAlignment="Center" FontWeight="Medium"/>
                    <TextBlock Text="é‡‘" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" HorizontalAlignment="Center" FontWeight="Medium"/>
                    <TextBlock Text="åœŸ" Foreground="{StaticResource InfoBrush}" FontSize="11" HorizontalAlignment="Center" FontWeight="Medium"/>
                </UniformGrid>

                <!-- ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼ã‚°ãƒªãƒƒãƒ‰ -->
                <ItemsControl Grid.Row="2" ItemsSource="{Binding CalendarDays}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:CalendarDay}">
                            <Button Command="{Binding DataContext.SelectDateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Width="32" Height="32"
                                    Margin="1">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="DayBorder"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="4">
                                                        <TextBlock x:Name="DayText"
                                                                   Text="{Binding Day}"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="12"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="DayBorder" Property="Background" Value="{StaticResource BackgroundHoverBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <!-- å½“æœˆä»¥å¤–ã¯è–„ã -->
                                            <DataTrigger Binding="{Binding IsCurrentMonth}" Value="False">
                                                <Setter Property="Opacity" Value="0.3"/>
                                            </DataTrigger>
                                            <!-- ä»Šæ—¥ -->
                                            <DataTrigger Binding="{Binding IsToday}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                            </DataTrigger>
                                            <!-- é¸æŠžæ—¥ -->
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                            <!-- é€±æœ«ï¼ˆæ—¥æ›œï¼‰ -->
                                            <DataTrigger Binding="{Binding Date.DayOfWeek}" Value="Sunday">
                                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                            </DataTrigger>
                                            <!-- é€±æœ«ï¼ˆåœŸæ›œï¼‰ -->
                                            <DataTrigger Binding="{Binding Date.DayOfWeek}" Value="Saturday">
                                                <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Border>

        <!-- é¸æŠžæ—¥ã®è¡¨ç¤º -->
        <Border Grid.Row="3"
                Background="{StaticResource PrimaryLightBrush}"
                CornerRadius="6"
                Padding="12,8"
                Margin="0,0,0,12">
            <TextBlock Text="{Binding SelectedDateString}"
                       Foreground="{StaticResource PrimaryBrush}"
                       FontWeight="SemiBold"
                       FontSize="13"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- äºˆå®šãƒªã‚¹ãƒˆ -->
        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="äºˆå®š"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontWeight="Medium"
                       FontSize="13"
                       Margin="0,0,0,8"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Events}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:CalendarEvent}">
                            <Border Background="{StaticResource BackgroundSecondaryBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- æ™‚é–“è¡¨ç¤º -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,12,0" Width="50">
                                        <TextBlock Foreground="{StaticResource TextPrimaryBrush}" FontWeight="Medium" FontSize="12">
                                            <Run Text="{Binding StartTime, StringFormat=HH:mm}"/>
                                        </TextBlock>
                                        <TextBlock Foreground="{StaticResource TextMutedBrush}" FontSize="11">
                                            <Run Text="{Binding EndTime, StringFormat=HH:mm}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- ã‚¤ãƒ™ãƒ³ãƒˆè©³ç´° -->
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontWeight="Medium"
                                                       FontSize="13"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Border Margin="8,0,0,0"
                                                    CornerRadius="3"
                                                    Padding="4,1"
                                                    Background="{Binding Source, Converter={StaticResource SourceToColorConverter}}">
                                                <TextBlock Text="{Binding Source}"
                                                           Foreground="White"
                                                           FontSize="9"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Location}"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   FontSize="11"
                                                   Visibility="{Binding Location, Converter={StaticResource NullToVisibilityConverter}}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- ãƒ•ãƒƒã‚¿ãƒ¼ -->
            <Grid Grid.Row="2" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Style="{StaticResource GhostButton}"
                        Command="{Binding OpenOutlookCalendarCommand}"
                        Margin="0,0,4,0">
                    <TextBlock Foreground="{StaticResource InfoBrush}" FontSize="11">
                        <Run Text="Outlookã‚’é–‹ã"/>
                    </TextBlock>
                </Button>

                <Button Grid.Column="1"
                        Style="{StaticResource GhostButton}"
                        Command="{Binding OpenGoogleCalendarCommand}"
                        Margin="4,0,0,0">
                    <TextBlock Foreground="{StaticResource ErrorBrush}" FontSize="11">
                        <Run Text="Googleã‚’é–‹ã"/>
                    </TextBlock>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
