<UserControl x:Class="InsightLauncher.Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- ヘッダー -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                <TextBlock Text="⚙️" FontSize="18" VerticalAlignment="Center"/>
                <TextBlock Text="設定"
                           Style="{StaticResource SectionHeader}"
                           Margin="8,0,0,0"/>
            </StackPanel>

            <!-- 外観 -->
            <TextBlock Text="外観"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,12"/>

            <Border Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="ダークモード"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontWeight="Medium"/>
                        <TextBlock Text="アプリの配色をダークテーマに切り替えます"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <ToggleButton Grid.Column="1"
                                  IsChecked="{Binding IsDarkMode}"
                                  Command="{Binding ToggleThemeCommand}"
                                  Width="50" Height="26">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="Track"
                                                    Background="{StaticResource BorderBrush}"
                                                    CornerRadius="13"
                                                    Padding="2">
                                                <Ellipse x:Name="Thumb"
                                                         Width="22" Height="22"
                                                         Fill="White"
                                                         HorizontalAlignment="Left"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Track" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                    <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>
                </Grid>
            </Border>

            <!-- 通知 -->
            <TextBlock Text="通知"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,12"/>

            <Border Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="予定のリマインダー"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Medium"/>
                            <TextBlock Text="予定開始前に通知を表示します"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <ToggleButton Grid.Column="1"
                                      IsChecked="{Binding EnableNotifications}"
                                      Width="50" Height="26">
                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border x:Name="Track"
                                                        Background="{StaticResource BorderBrush}"
                                                        CornerRadius="13"
                                                        Padding="2">
                                                    <Ellipse x:Name="Thumb"
                                                             Width="22" Height="22"
                                                             Fill="White"
                                                             HorizontalAlignment="Left"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Track" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                        <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="リマインダー時間"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>

                        <ComboBox Grid.Column="1"
                                  SelectedValue="{Binding ReminderMinutesBefore}"
                                  SelectedValuePath="Tag"
                                  Width="120">
                            <ComboBoxItem Content="1分前" Tag="1"/>
                            <ComboBoxItem Content="5分前" Tag="5"/>
                            <ComboBoxItem Content="10分前" Tag="10"/>
                            <ComboBoxItem Content="15分前" Tag="15"/>
                            <ComboBoxItem Content="30分前" Tag="30"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- 連携 -->
            <TextBlock Text="連携サービス"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontWeight="SemiBold"
                       FontSize="14"
                       Margin="0,0,0,12"/>

            <Border Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Teams Webhook URL"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TeamsWebhookUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource BackgroundCardBrush}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 Padding="8"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Slack Webhook URL"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding SlackWebhookUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{StaticResource BackgroundCardBrush}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 Padding="8"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 保存ボタン -->
            <Button Style="{StaticResource PrimaryButton}"
                    Command="{Binding SaveSettingsCommand}"
                    Content="設定を保存"
                    HorizontalAlignment="Left"
                    Padding="24,10"/>

            <!-- バージョン情報 -->
            <Border Background="{StaticResource BackgroundSecondaryBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,24,0,0">
                <StackPanel>
                    <TextBlock Text="Insight Launcher"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="バージョン 1.0.0"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="12"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
